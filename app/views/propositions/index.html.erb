<div class="container">
  <div class="row">
    <h4><strong>案件一覧</strong></h4>
  </div>

  <%# 新着案件 %>
  <div class="row">
    <div class="col-md-9">
      <% @propositions.each do |proposition| %>
        <div class="col-md-12 my-3">
          <%= render 'propositions/proposition_card', proposition: proposition %>
        </div>
      <% end %>
    </div>

    <%# 案件検索フォーム %>
    <div class="col-md-3" style="padding-top: 16px;">
      <%= render 'propositions/propositions_search_form', search: @search %>
    </div>
  </div><br >

  <%# ページネーション %>
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <%= paginate @propositions %>
    </div>
  </div>
</div>
