<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>新規会員登録</h2>
    </div>
  </div>

  <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }, local: true) do |f| %>
    <div class="form-group row">
      <%# nameカラム %>
      <%= f.label :name, "氏名", for: "validationCustom01", class: "col-md-2 col-form-label" %><br >
      <div class="col-md-4">
        <%= f.text_field :name, autofocus: true, placeholder: "姓と名の間に要スペース", id: "validationCustom01", class: "form-control", required: true %>
        <div class="invalid-feedback">
          有効な氏名を入力してください。
        </div>
      </div>
      <%# kana_nameカラム %>
      <%= f.label :kana_name, "フリガナ", for: "validationCustom02", class: "col-md-2 col-form-label" %><br >
      <div class="col-md-4">
        <%= f.text_field :kana_name, placeholder: "姓と名の間に要スペース", id: "validationCustom02", class: "form-control", required: true %>
        <div class="invalid-feedback">
          有効なフリガナを入力してください。
        </div>
      </div>
    </div>

    <div class="form-group row">
      <%# emailカラム %>
      <%= f.label :email, "Eメール", for: "validationCustom03", class: "col-md-2 col-form-label" %><br >
      <div class="col-md-10">
        <%= f.email_field :email, autocomplete: "email", id: "validationCustom03", class: "form-control", required: true %>
        <div class="invalid-feedback">
          有効なEメールアドレスを入力してください。
        </div>
      </div>
    </div>

    <div class="form-group row">
      <%# phone_numberカラム %>
      <%= f.label :phone_number, "携帯電話番号", for: "validationCustom04", class: "col-md-2 col-form-label" %><br >
      <div class="col-md-10">
        <%= f.text_field :phone_number, placeholder: "ハイフン無し", id: "validationCustom04", class: "form-control", required: true %>
        <div class="invalid-feedback">
          有効な電話番号を入力してください。
        </div>
      </div>
    </div>

    <div class="form-group row">
      <%# password %>
      <%= f.label :password, "パスワード", for: "validationCustom05", class: "col-md-2 col-form-label" %>
      <div class="col-md-10">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length}文字以上", id: "validationCustom05", class: "form-control", required: true %>
        <div class="invalid-feedback">
          パスワードを入力してください。
        </div>
      </div>
    </div>

    <div class="form-group row">
      <%# password_confirmation %>
      <%= f.label :password_confirmation, "パスワード確認用", for: "validationCustom06", class: "col-md-2 col-form-label" %><br />
      <div class="col-md-10">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "#{@minimum_password_length}文字以上", id: "validationCustom06", class: "form-control", required: true %>
        <div class="invalid-feedback">
          上記のパスワードを再度入力してください。
        </div>
      </div>
    </div>

    <div class="actions mx-auto" style="width: 200px;">
      <%= f.submit "新規会員登録", class: "btn btn-info btn-block" %><br />
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>

<script>
// 無効なフィールドがある場合にフォーム送信を無効にするスターターJavaScriptの実例
(function() {
  'use strict';

  window.addEventListener('load', function() {
    // カスタムブートストラップ検証スタイルを適用するすべてのフォームを取得
    var forms = document.getElementsByClassName('needs-validation');
    // ループして帰順を防ぐ
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>
