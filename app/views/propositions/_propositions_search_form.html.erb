<div class="col-md-12 rounded-lg bg-white sticky-top py-3" style="top: 100px;">
  <h6 class="mb-4"><strong>案件検索フォーム</strong></h6>

  <%= search_form_for(search, url: search_propositions_path) do |f| %>
    <div class="form-group row">
      <div class="col-md-12">
        <%= f.search_field :title_or_introduction_cont, placeholder: "タイトル or 説明文を検索", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :deadline_lteq, "〆切日", class: "col-md-12 col-form-label" %>
      <div class="col-md-12">
        <%= f.date_field :deadline_lteq, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :barter_status_lteq, "ステータス", class: "col-md-12 col-form-label" %>
      <div class="col-md-12">
        <%= f.select :barter_status_lteq, { "全て(交換完了済み含む)": 5, マッチング中: 2 }, {}, { class: "custom-select" } %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-12">
        <%= f.collection_select :proposition_category_tags_name_cont, Tag.all.order(name: "ASC"), :name, :name, { include_blank: "案件カテゴリで探す"}, {class: "custom-select"} %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-12">
        <%= f.collection_select :request_category_tags_name_cont, Tag.all.order(name: "ASC"), :name, :name, { include_blank: "要望カテゴリで探す"}, {class: "custom-select"} %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8 offset-md-2 actions">
        <%= f.submit "検索", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>

</div>
