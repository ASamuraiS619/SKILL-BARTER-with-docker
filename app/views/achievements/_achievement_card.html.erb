<div class="card img-thumbnail h-100 mb-10 border border-white">
  <% if user_signed_in? && achievement.user == current_user %>
    <p class="card-text mb-0 text-right">
      <span class="badge badge-pill badge-info"><%= link_to "編集", edit_achievement_path(achievement.id), class: "text-white" %></span>
      <span class="badge badge-pill badge-danger"><%= link_to "削除", achievement_path(achievement.id), method: :delete, class: "text-white", "data-confirm" => "本当に削除しますか？" %></span>
    </p>
  <% end %>
    <%= image_tag achievement.image_id.to_s, class: "card-img-top img-thumbnail border border-white" %>
    <div class="card-body p-2">
      <h5 class="card-title"><strong><%= achievement.title %></strong></h5>
      <p class="card-text"><%= achievement.introduction %></p>
    </div>
</div>
