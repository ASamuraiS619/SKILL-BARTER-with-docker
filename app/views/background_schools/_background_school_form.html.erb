<%= form_with(model: background_school, html: { class: "needs-validation-school", novalidate: true }, local: true) do |f| %>
  <div class="form-group row align-items-center">
    <%= f.label :school_name, "学校名", for: "validationCustom01", class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
      <%= f.text_field :school_name, id: "validationCustom01", class: "form-control", required: true %>
      <div class="invalid-feedback">
        学校名を入力してください。
      </div>
    </div>
  </div>

  <div class="form-group row align-items-center">
    <%= f.label :school_type, "学校種類", for: "validationCustom02", class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
      <%= f.select :school_type, { 高校: "highschool", 専門学校: "vocational_school", 短期大学: "junior_college", 大学: "university", 大学校: "academy", 大学院: "graduate_school" }, {}, { id: "validationCustom02", class: "custom-select", required: true } %>
      <div class="invalid-feedback">
        学校種類を選択してください。
      </div>
    </div>
  </div>

  <div class="form-group row align-items-center">
    <%= f.label :department, "学部", class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
      <%= f.text_field :department, placeholder: "必須ではありません", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row align-items-center">
    <%= f.label :enrollment_status, "在学状況", for: "validationCustom03", class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
      <%= f.select :enrollment_status, { 在学中: "currently", 卒業: "graduated", 中退: "dropout" }, {}, { id: "validationCustom03", class: "form-control", required: true } %>
      <div class="invalid-feedback">
        在籍状況を選択してください。
      </div>
    </div>
  </div>

  <div class="row align-items-center">
    <div class="col-md-9">
    </div>
    <div class="col-md-3">
      <%= f.submit "追加", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>

<script>
// 無効なフィールドがある場合にフォーム送信を無効にするスターターJavaScriptの実例
(function() {
  'use strict';

  window.addEventListener('load', function() {
    // カスタムブートストラップ検証スタイルを適用するすべてのフォームを取得
    var forms = document.getElementsByClassName('needs-validation-school');
    // ループして帰順を防ぐ
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>
